<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/title_activity_task_details"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Enter task here"
        android:layout_margin="20dp"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="4"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/editText" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:paddingLeft="5dp"
            android:lines="1"
            android:ellipsize="end"
            android:text="No Date selected"
            android:id="@+id/dateTv" />

        <Button
            android:text="Add Date"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:id="@+id/addDateBtn"
            android:layout_weight="1"
            android:background="@null"
            android:src="@android:drawable/ic_notification_overlay" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:paddingLeft="5dp"
            android:lines="1"
            android:ellipsize="end"
            android:text="No Time selected"
            android:id="@+id/timeTv" />

        <Button
            android:text="Add Time"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:id="@+id/addTimeBtn"
            android:layout_weight="1"
            android:background="@null"
            android:src="@android:drawable/ic_notification_overlay" />


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/locationLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>



        <Button
            android:text="Add Location"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addLocationBtn"
            android:layout_weight="1"
            android:background="@null"
            android:src="@android:drawable/ic_notification_overlay" />


    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:max="2500"
        android:layout_marginBottom="10dp"
        android:id="@+id/seekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 m"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/storeBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/activity_task_details_store"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
</ScrollView>